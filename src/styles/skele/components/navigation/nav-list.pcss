.nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
  width: 100%;
}

.nav-root.sidebar {
  .nav-list {
    font-size: var(--font-size-md);
    padding-inline-start: var(--spacing-md);
  }
}

.nav-root.horizontal {
  .nav-list {
    align-items: center;
    display: flex;
    gap: var(--spacing-em-sm);
  }

  .nav-item > .nav-item-content .nav-list {
    display: block;
    min-width: 150px;
  }
}

.nav-root.mobile {
  .nav-list {
    font-size: var(--font-size-lg);
  }
}
