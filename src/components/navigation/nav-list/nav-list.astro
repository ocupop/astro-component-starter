---
import { navListSchema } from "../nav-item-list-schema";
const props = navListSchema.parse(Astro.props);
---

<style>
  @layer components {
    .nav-list {
      list-style: none;
      margin: 0;
      padding: 0;
      width: 100%;
    }

    .nav-list.sidebar {
      font-size: var(--font-size-md);
      padding-inline-start: var(--spacing-md);
    }
  }
</style>

<ul
  class:list={["nav-list", props.layout, props.className]}
  id={props.id}
  style={props.customStyle}
  role="menu"
>
  <slot />
</ul>
